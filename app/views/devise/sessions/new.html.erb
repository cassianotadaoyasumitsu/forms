<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-11 col-md-8 col-lg-5 col-xl-4">
      <!-- Insert form here -->
      <div class="form-login">
        <h2>ENTRAR</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: "Email:",
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: "Senha:",
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Lembrar Senha", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "ENTRAR", class: "btn btn-ghost" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
