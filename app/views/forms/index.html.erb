<% @forms.each do |form| %>
<div class="card mt-3">
  <div class="card-body d-flex justify-content-between">
    <p><%= form.name %></p>
    <p><%= form.phone %></p>
  </div>
  <div class="card-body d-flex justify-content-between">
    <%= link_to 'Visualizar', form_path(form), class: 'btn btn-ghost btn-sm' %>
    <%= link_to 'Editar', edit_form_path(form), class: 'btn btn-ghost btn-sm' %>
    <%= link_to 'Apagar', form_path(form), class: 'btn btn-ghost btn-sm', method: :delete, data: { confirm: 'Gostaria de apagar esse cadastro?' } %>
  </div>
</div>
<% end %>
